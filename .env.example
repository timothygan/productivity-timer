# Environment Configuration Example
# Copy this file to .env and fill in your actual values

# Application Environment
NODE_ENV=development

# Build Configuration
VITE_APP_TITLE="Aesthetic Pomodoro Timer"
VITE_APP_VERSION="1.0.0"
VITE_APP_DESCRIPTION="An aesthetic web-based Pomodoro timer"

# API Configuration (if needed for future features)
# VITE_API_BASE_URL=https://api.example.com
# VITE_API_VERSION=v1

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_PWA=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_SOUND_EFFECTS=true

# Theme Configuration
VITE_DEFAULT_THEME=system
VITE_AVAILABLE_THEMES=light,dark,purple,green,blue

# Timer Configuration Defaults
VITE_DEFAULT_FOCUS_TIME=25
VITE_DEFAULT_SHORT_BREAK=5
VITE_DEFAULT_LONG_BREAK=15
VITE_DEFAULT_CYCLES_BEFORE_LONG_BREAK=4

# Audio Configuration
VITE_DEFAULT_VOLUME=0.5
VITE_ENABLE_TICK_SOUND=false

# Development Settings
VITE_DEBUG_MODE=true
VITE_SHOW_PERFORMANCE_METRICS=false

# External Services (for future integrations)
# VITE_GOOGLE_FONTS_API_KEY=
# VITE_NOTIFICATION_SERVICE_URL=

# Accessibility Settings
VITE_ENABLE_HIGH_CONTRAST=false
VITE_ENABLE_REDUCED_MOTION=false

# Storage Settings
VITE_STORAGE_PREFIX=pomodoro_timer_
VITE_STORAGE_VERSION=1

# Performance Settings
VITE_TIMER_PRECISION_MS=100
VITE_ANIMATION_FRAME_RATE=60

# Build Settings
VITE_BUILD_ANALYZE=false
VITE_BUILD_COMPRESSION=true